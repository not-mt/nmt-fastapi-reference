{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Compound: uvicorn/huey",
      "configurations": [
        "debugpy: uvicorn",
        "debugpy: huey"
      ],
      "stopAll": true
    }
  ],
  "configurations": [
    {
      "name": "debugpy: huey",
      "consoleName": "huey",
      "console":"internalConsole",
      "type": "debugpy",
      "request": "launch",
      "module": "huey.bin.huey_consumer",
      "redirectOutput": true,
      "subProcess": true,
      "cwd": "${workspaceFolder}",
      "env": {
        "PROCESS_SPAWN_TIMEOUT": "60",
        "APP_CONFIG_FILES": "nmtfast-config-default.yaml,nmtfast-config-local.yaml",
      },
      "args": [
        "app.task_loader.huey_app",
      ],
    },
    {
      "name": "debugpy: uvicorn",
      "consoleName": "uvicorn",
      "console":"internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "APP_CONFIG_FILES": "nmtfast-config-default.yaml,nmtfast-config-local.yaml",
      }
    },
    {
      "name": "debugpy: local PID",
      "type": "debugpy",
      "request": "attach",
      "processId": "${command:pickProcess}"
    },
  ]
}
